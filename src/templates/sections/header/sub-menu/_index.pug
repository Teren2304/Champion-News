          a(href="#").sub-menu__link
            span.sub-menu__label Text 4
        li.sub-menu__item
          a(href="#").sub-menu__link
            span.sub-menu__label Text 5
            i.fa.fa-angle-right.sub-menu__icon

          ul.sub-menu
