#contact-us.section
  .container
    .section__header
      h2.section__title.h1 We are ready to !{' '}
        span.accent-background.js-accent-background-animate collaborate

    .contact-us
      .contact-us__item
        p.contact-us__title Our offices
        .contact-us__block
          picture
            //source(srcset="img/map.webp, img/map@2x.webp 2x" type="image/webp")
            source(srcset="img/map.png, img/map@2x.png 2x" type="image/png")
            img.contact-us__decore(src="img/map.png" alt="map")
          .contact-us__location
            p.contact-us__country USA
            address.contact-us__address
              | 5425 Grosvenor Blvd,
              br
              |Los Angeles, CA 90066, United States

          .contact-us__location
            p.contact-us__country Ukraine
            address.contact-us__address
              |Dniprovska Embankment, 21, Kyiv, 02081

      .contact-us__item
        p.contact-us__title Drop us a line
        form.contact-us__form
          .input.has-error.contact-us__row
            input(type="text" placeholder="Name (company)" name="name" class="input__item contact-us__input")
            span.input__alert asdasda
          .input.contact-us__row
            input(type="email" placeholder="E-mail" name="email" class="input__item contact-us__input")
            span.input__alert asdasda
          .input.contact-us__row.contact-us__textarea
            textarea(name="message" placeholder="Message here" class="input__textarea")
            span.input__alert asdasda
          .contact-us__group.checkbox.has-error
            input(type="checkbox" id="checkbox" class="checkbox__item")
            label(for="checkbox" class="checkbox__label")
              span.checkbox__text I agree with Terms of use and Privacy policy
          .contact-us__submit
            input(type="submit" value="Send").button.contact-us__button
          .u-my-24
            include ../components/_notification

