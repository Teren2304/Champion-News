mixin social-links(title, modClass, secondModClass)
  .social-links(
      class= modClass ? `social-links--${modClass}`: '',
      class= secondModClass ? `social-links--${secondModClass}`: ''
    )
    if title
      p.social-links__title= title
    else

    .social-links__wrap
      a(href="/").social-links__link
        +icon('facebook-white', 'icon')
      a(href="/").social-links__link
        +icon('linkedin-white', 'icon')
