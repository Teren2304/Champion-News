mixin languages(className)
  .language.js-button-wrapper(class=`${className}`)
    button(class="language__trigger js-dropdown-button" type="button")
      span.language__label En
      span.language__arrow
        +icon('arrow-triangle', 'icon')
    ul.language__list.js-dropdown-menu
      li.language__item
        a(href="/" class="language__button language__button-is-active js-dropdown__item") Uk
      li.language__item
        a(href="/" class="language__button") En
      li.language__item
        a(href="/" class="language__button") Ru
      li.language__item
        a(href="/" class="language__button") Cn
      li.language__item
        a(href="/" class="language__button") Pt
