form.subscribe-form
  .input.subscribe-form__input
    input(type="email" placeholder="E-mail" name="email" class="input__item")
    span.input__alert
  .subscribe-form__group.checkbox
    input(type="checkbox" id="checkbox-subscribe" class="checkbox__item")
    label(for="checkbox-subscribe" class="checkbox--white checkbox__label")
      span.checkbox__text I agree with!{' '}
        a.checkbox__link(href="/") Terms of use
        | !{' '}and!{' '}
        a.checkbox__link(href="/") Privacy policy
  .subscribe-form__button
    input(type="submit" value="Send").button
