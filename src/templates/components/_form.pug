form.form
  .input.has-error.form__row
    input(type="text" placeholder="Name (company)" name="name" class="input__item form__input")
    span.input__alert Something is wrong. Check the format: navi@mail.com
  .input.form__row
    input(type="email" placeholder="E-mail" name="email" class="input__item form__input")
    span.input__alert
  .input.form__row.form__textarea
    textarea(name="message" placeholder="Message here" class="input__textarea")
    span.input__alert
  .form__group.checkbox.has-error
    input(type="checkbox" id="checkbox" class="checkbox__item")
    label(for="checkbox" class="checkbox__label")
      span.checkbox__text I agree with!{' '}
        a.checkbox__text--link(href="") Terms of use
        | !{' '}and!{' '}
        a.checkbox__text--link(href="") Privacy policy
  .form__submit
    input(type="submit" value="Send").button.form__button
  .u-mt-24
    include ../components/_notification
