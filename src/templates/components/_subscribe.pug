.section.subscribe
  .container
    .section__header
      h2.section__title.h1
        span.accent-background.js-accent-background-animate Subscribe
        | !{' '}to receive cool b2b information about esports
    form.subscribe__form
      .input.subscribe__input
        input(type="email" placeholder="E-mail" name="email" class="input__item")
        span.input__alert
      .subscribe__group.checkbox
        input(type="checkbox" id="checkbox-subscribe" class="checkbox__item")
        label(for="checkbox-subscribe" class="checkbox--white checkbox__label")
          span.checkbox__text I agree with Terms of use and Privacy policy
      .subscribe__input.subscribe__input--button
        input(type="submit" value="Send").button
